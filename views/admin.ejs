<!DOCTYPE html>
<html>
<head>
  <title>Form Example</title>
  <script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
    }

    .form-container {
      width: 400px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ccc;
      background-color: #f0f0f0;
      border-radius: 5px;
    }

    .form-container label,
    .form-container input,
    .form-container textarea {
      display: inline-block;
      margin-bottom: 10px;
      width: 100%;
    }

    .form-container label {
      font-weight: bold;
    }

    .form-container input,
    .form-container textarea {
      padding: 8px;
      border-radius: 3px;
      border: 1px solid #ccc;
      box-sizing: border-box;
    }

    .form-container button {
      display: inline-block;
      width: 50%;
      padding: 10px;
      margin-top: 10px;
      background-color: #4CAF50;
      color: #fff;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }

    .form-container .button-container {
      text-align: center;
      margin-top: 10px;
    }

    .form-container .button-container button,
    .form-container .button-container a {
      display: inline-block;
      width: 45%;
      padding: 6px 12px;
      background-color: #4CAF50;
      color: #fff;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      text-decoration: none;
      transition: background-color 0.3s ease;
      font-size: 14px;
    }

    .form-container .button-container a:hover {
      background-color: #e12222;
    }

    .form-container #title {
      margin-left: 0;
      margin-right: 0;
      margin-bottom: 10px;
    }

    .form-container .upload-label {
      margin-top: 10px;
    }
    @font-face {
    font-family: 'CustomFont';
    src: url('fonts/customfont.woff2') format('woff2'),
         url('fonts/customfont.woff') format('woff');
    font-weight: normal;
    font-style: normal;
  }
  </style>
</head>
<body>
  <div class="form-container">
    <form method="post" action="/dashboard" enctype="multipart/form-data">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required>
      <textarea name="editor" id="editor1" style="height: 200px;"></textarea>
      <!-- Added a div wrapper -->
      <div style="margin-top: 6px;">
        <label for="pdfFile">Upload PDF</label>
        <input type="file" id="pdfFile" name="pdfFile">
      </div>
      <script>
         CKEDITOR.replace('editor', {
    filebrowserUploadUrl: '/upload',
    fontSize_sizes: '12/12px;14/14px;16/16px;20/20px;24/24px;28/28px;32/32px;36/36px;40/40px;48/48px;56/56px;64/64px;72/72px;',
    font_names: 'Arial/Arial, sans-serif;Courier New/Courier New, monospace;Custom Font/CustomFont;',
  
  });
      </script>
      <div class="button-container">
        <button type="submit">Submit</button>
        <a href="/dashboard">Cancel</a>
      </div>
    </form>
  </div>
</body>
</html>
